<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".sm.StudentRegisterActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="学生注册"
        android:gravity="center">

    </TextView>
    <EditText
        android:id="@+id/stu_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="姓名"
        android:inputType="textPersonName"
        android:background="@drawable/edittext_phonenumber"
        android:gravity="left"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />
    <RadioGroup
        android:id="@+id/RadioGroupStuSex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp"></View>
        <RadioButton
            android:id="@+id/radiobuttonMale"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:checked="true"
            android:text="男"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp"></View>
        <RadioButton
            android:id="@+id/radiobuttonFemale"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="女"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp"></View>

    </RadioGroup>
    <EditText
        android:id="@+id/stu_age"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="年龄"
        android:inputType="number"
        android:background="@drawable/edittext_phonenumber"
        android:gravity="left"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />
    <EditText
        android:id="@+id/stu_tel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="电话号码"
        android:inputType="phone"
        android:background="@drawable/edittext_phonenumber"
        android:gravity="left"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />
    <EditText
        android:id="@+id/stu_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="密码"
        android:inputType="textPassword"
        android:background="@drawable/edittext_phonenumber"
        android:gravity="left"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />
    <EditText
        android:id="@+id/stu_date"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="入学时间"
        android:inputType="number"
        android:background="@drawable/edittext_phonenumber"
        android:gravity="left"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />


    <Spinner
        android:id="@+id/stu_faculty"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:entries="@array/facultyArray">

    </Spinner>
    <Spinner
        android:id="@+id/stu_major"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:entries="@array/majorArray">

    </Spinner>
    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="确定注册">

    </Button>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

    </LinearLayout>
    <Button
        android:id="@+id/btn_sel_course"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="我要选课">

    </Button>
    <Button
        android:id="@+id/btn_admin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"

        android:text="我是管理员">

    </Button>
</LinearLayout>